    <title>ASP.NET MVC Spreadsheet Sorting and Filtering Functionalities Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example for  Sorting and Filtering Functionalities in ASP.NET MVC Spreadsheet Control</h1>
}